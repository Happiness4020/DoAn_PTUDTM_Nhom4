@model List<DoAn_QLDoDienTu_Web.Models.SanPham>
@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_Main.cshtml";
}


<style>
    .mySwiper {
        width: 100%;
        margin: 0 auto;
        margin-top: 0;
    }

    .card {
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-weight: 600;
        margin-bottom: 15px;
    }
</style>

<div class="container-fluid border p-2" style="background-color: lightgray">
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-md-2 d-flex mb-4">
                <div class="card mb-4 mx-auto shadow-sm h-100" style="max-width: 300px;">
                    <div class="card-body d-flex flex-column">
                        @if (item.Anh != "")
                        {
                            <a href="/Home/ChiTietSanPham/@item.MaSanPham">
                                <img src="~/images/@item.Anh" alt="Sản phẩm" class="card-img-top" />
                            </a>
                        }
                        else
                        {
                            <a href="/Home/ChiTietSanPham/@item.MaSanPham">
                                <img src="~/images/noimage.jpg" alt="Sản phẩm" class="card-img-top" />
                            </a>
                        }
                        <h5 class="card-title flex-grow-1 mt-2"><a href="/Home/ChiTietSanPham/@item.MaSanPham" class="text-decoration-none" style="color: #0066b3">@Html.DisplayFor(model => item.TenSanPham)</a></h5>
                        @*<h4>Giá: @Html.DisplayFor(model => item.MoTa)</h4>*@
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center mt-3">
        <a href="@Url.Action("TongSanPham", "Home")" class="btn text-white" style="background-color: #0066b3">Xem tất cả đồ điện tử</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>